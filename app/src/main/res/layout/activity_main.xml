<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activities.MainActivity">

    <Button
        android:id="@+id/open_activity_with_db_paging"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Open activity with DB paging"
        android:onClick="openActivityWithDbPaging" />

    <Button
        android:id="@+id/open_activity_with_nwtwork_paging"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Open activity with network paging"
        android:onClick="openActivityWithNetworkPaging" />

</LinearLayout>